<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2>Simple Messenger</h2>
        </div> 
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <form class="form-inline" id="chat-bar">
                <div class="form-group">
                    <label for="type-message">Your message</label>
                    <input type="text" class="form-control" id="type-message"
                    name="message" placeholder="write here...">
                    <input type="hidden" name="username" value="{{user.username}}">
                    <input type="hidden" name="room" value="{{user.room}}">
                </div>

                <button type="submit" class="btn btn-default">Send</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <p id="status">someone is typing...</p>
            <ul id="message-list"></ul>
        </div>
    </div>
</div>
